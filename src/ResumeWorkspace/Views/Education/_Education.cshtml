@model ResumeWorkspace.Models.Education

@using (Html.BeginForm())
{
    <div class="row">

        <div class="col-md-6">

                <div class="form-group">
                    @Html.LabelFor(m => m.Institution, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Institution, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Website, new { @class = "control-label" })
                    @Html.TextAreaFor(m => m.Website, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Address, new { @class = "control-label" })
                    @Html.TextAreaFor(m => m.Address, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.City, new { @class = "control-label" })
                    @Html.TextAreaFor(m => m.City, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.State, new { @class = "control-label" })
                    @Html.TextAreaFor(m => m.State, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Zip, new { @class = "control-label" })
                    @Html.TextAreaFor(m => m.Zip, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Degree, new { @class = "control-label" })
                    @Html.TextAreaFor(m => m.Degree, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.StartDate, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.StartDate, "{0:d}", new { @class = "form-control datepicker" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.EndDate, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.EndDate, "{0:d}", new { @class = "form-control datepicker" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.GPA, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.GPA, new { @class = "form-control datepicker" })
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(m => m.Accomplishments, new { @class = "control-label" })
                    @Html.TextAreaFor(m => m.Accomplishments, new { @class = "form-control" })
                </div>


            <div class="col-md-12">
                <div class="pad-top">
                    <button type="submit" class="btn btn-success btn-lg margin-right">
                        <span class="glyphicon glyphicon-save"></span> Save
                    </button>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-warning btn-lg">
                        <span class="glyphicon glyphicon-remove"></span> Cancel
                    </a>
                </div>
            </div>

      </div>
</div>

}
