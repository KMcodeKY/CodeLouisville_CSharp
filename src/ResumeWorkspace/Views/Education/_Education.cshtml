@model ResumeWorkspace.Models.Education

@using (Html.BeginForm())
{
    @Html.ValidationSummary("The following errors were found:", new { @class = "alert alert-danger" })

            @Html.HiddenFor(m => m.PersonId)
            @Html.HiddenFor(m => m.Id)

    <div class="row">
        <div class="col-sm-6 col-xs-12 form-group">
            @Html.LabelFor(m => m.Institution, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Institution, new { @class = "form-control" })
        </div>

        <div class="col-sm-3 col-xs-6 form-group">
            @Html.LabelFor(m => m.StartDate, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.StartDate, "{0:d}", new { @class = "form-control datepicker" })
        </div>

        <div class="col-sm-3 col-xs-6 form-group">
            @Html.LabelFor(m => m.EndDate, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.EndDate, "{0:d}", new { @class = "form-control datepicker" })
        </div>

        <span class="clearfix"></span>
            <div class="col-sm-6 col-xs-12 form-group">
                @Html.LabelFor(m => m.Website, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Website, new { @class = "form-control" })
        </div>
        <span class="clearfix"></span>

        <span class="clearfix"></span>
        <div class="col-sm-6 col-xs-12 form-group">
            @Html.LabelFor(m => m.Address, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
        </div>
        <span class="clearfix"></span>

        <div class="col-sm-6 col-xs-12 form-group">
            @Html.LabelFor(m => m.City, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
        </div>

        <div class="col-sm-3 col-xs-6 form-group">
            @Html.LabelFor(m => m.State, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.State, new { @class = "form-control" })
        </div>

        <div class="col-sm-3 col-xs-6 form-group">
            @Html.LabelFor(m => m.Zip, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Zip, new { @class = "form-control" })
        </div>

        <div class="col-sm-10 col-xs-8 form-group">
            @Html.LabelFor(m => m.Degree, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Degree, new { @class = "form-control" })
        </div>

        <div class="col-sm-2 col-xs-4 form-group">
            @Html.LabelFor(m => m.GPA, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.GPA, "{0:0.00}", new { @class = "form-control" })
        </div>

        <span class="clearfix"></span>
        <div class="col-sm-12 col-xs-12 form-group">
            @Html.LabelFor(m => m.Accomplishments, new { @class = "control-label" })
            @Html.TextAreaFor(m => m.Accomplishments, new { @class = "form-control", rows = "4", cols = "12" })
        </div>
        <span class="clearfix"></span>

        <div class="col-sm-12 col-xs-12 center form-btn">
            <button type="submit" class="btn btn-success btn-lg btn-space">
                <span class="glyphicon glyphicon-save"></span> Save
            </button>
            <a href="@Url.Action("About", "Home")" class="btn btn-warning btn-lg">
                <span class="glyphicon glyphicon-remove"></span> Cancel
            </a>
        </div>

    </div>
}
